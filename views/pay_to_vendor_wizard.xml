<!-- my_module/views/pay_to_vendor_wizard.xml -->

<odoo>
    <record id="view_pay_to_vendor_wizard_form" model="ir.ui.view">
        <field name="name">pay.to.vendor.wizard.form</field>
        <field name="model">pay.to.vendor.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="vendor_id"/>
                    <field name="date"/>
                    <field name="amount"/>
                </group>
                <footer>
                    <button string="Submit" type="object" class="oe_highlight" name="action_submit"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
